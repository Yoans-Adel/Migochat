# Flake8 Configuration
# https://flake8.pycqa.org/en/latest/user/configuration.html

[flake8]
# Maximum line length - relaxed to 100 (reasonable for modern displays)
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .pytest_cache,
    htmlcov,
    build,
    dist,
    *.egg-info,
    temp,
    .tox,
    docs/_build

# Select error codes to check
select = E,W,F,C

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with Black formatter)
    E203,
    # W503: line break before binary operator (outdated, PEP 8 now allows it)
    W503

# Per-file ignores
per-file-ignores =
    # E402: Allow import order issues in files that modify sys.path
    **/conftest.py:E402
    **/webhook.py:E402
    **/dashboard.py:E402
    Server/main.py:E402
    scripts/*.py:E402
    database/scripts/*.py:E402
    run.py:E402
    # C901: Complex business logic in product operations
    # E501: Long lines with detailed product data
    bww_store/product_ops.py:C901,E501
    # E501: Long lines for DI container type hints
    Server/routes/service_helpers.py:E501
    # F401: Unused imports in __init__.py files (re-exports)
    **/__init__.py:F401

# Complexity threshold
max-complexity = 15

# Output options
show-source = True
statistics = True
count = True
